<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/battalgazi_gray_50">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/battalgazi_header_background"
        android:layout_marginBottom="32dp"
        android:elevation="8dp"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/battalgazi_white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_subtitle"
            android:textSize="16sp"
            android:textColor="@color/battalgazi_light"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/battalgazi_subtitle"
            android:textSize="12sp"
            android:textColor="@color/battalgazi_light"
            android:gravity="center" />

    </LinearLayout>

    <!-- Login Form Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/battalgazi_card_background"
        android:elevation="4dp"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_login_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/battalgazi_primary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="📧 E-posta"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/battalgazi_input_background"
            android:textColor="@color/battalgazi_gray_800"
            android:textColorHint="@color/battalgazi_gray_400" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="🔒 Şifre"
            android:inputType="textPassword"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/battalgazi_input_background"
            android:textColor="@color/battalgazi_gray_800"
            android:textColorHint="@color/battalgazi_gray_400" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚪 Giriş Yap"
            android:textSize="16sp"
            android:background="@drawable/battalgazi_button_background"
            android:textColor="@color/battalgazi_white"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Kayıt Ol"
            android:textSize="16sp"
            android:background="@drawable/battalgazi_button_background"
            android:textColor="@color/battalgazi_white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Links Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/switch_to_register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabın yok mu? 📝 Kayıt ol"
            android:textColor="@color/battalgazi_primary"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/switch_to_admin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👨‍💼 Yetkili girişi"
            android:textColor="@color/battalgazi_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout> 