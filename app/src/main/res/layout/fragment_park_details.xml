<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/battalgazi_gray_50">

    <!-- Park Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/battalgazi_card_background"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/park_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/battalgazi_primary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/park_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/battalgazi_gray_700"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/park_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/battalgazi_gray_600"
            android:gravity="center"
            android:background="@color/battalgazi_light"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <!-- Report Issue Button -->
    <Button
        android:id="@+id/report_issue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_issue_button"
        android:textSize="18sp"
        android:background="@drawable/battalgazi_button_background"
        android:textColor="@color/battalgazi_white"
        android:padding="16dp"
        android:elevation="4dp" />

</LinearLayout> 