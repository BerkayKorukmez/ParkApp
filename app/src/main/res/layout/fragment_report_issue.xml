<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/battalgazi_gray_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/battalgazi_card_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📝 Şikayet Bildirimi"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/battalgazi_primary"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/battalgazi_card_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏞️ Park Seçimi:"
                android:textSize="16sp"
                android:textColor="@color/battalgazi_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/park_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/battalgazi_input_background"
                android:padding="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔧 Şikayet Türü:"
                android:textSize="16sp"
                android:textColor="@color/battalgazi_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/issue_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/battalgazi_input_background"
                android:entries="@array/issue_types"
                android:padding="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📝 Açıklama:"
                android:textSize="16sp"
                android:textColor="@color/battalgazi_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/description_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:gravity="top"
                android:hint="Şikayetinizi detaylı olarak açıklayın..."
                android:inputType="textMultiLine"
                android:background="@drawable/battalgazi_input_background"
                android:padding="16dp"
                android:textColor="@color/battalgazi_gray_800"
                android:textColorHint="@color/battalgazi_gray_400"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📤 Şikayeti Gönder"
            android:textSize="18sp"
            android:background="@drawable/battalgazi_button_background"
            android:textColor="@color/battalgazi_white"
            android:padding="16dp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView> 